<?xml version="1.0" encoding="UTF-8"?>
<rpst>
    <seq>
        <task lane="" pool="">management indicates that new clients are needed</task>
        <and>
            <seq>
                <task lane="" pool="">the marketing team will perform a market analysis</task>
            </seq>
            <seq>
                <task lane="" pool="">the marketing team will prepare a portfolio presentation</task>
            </seq>
        </and>
        <task lane="" pool="">marketing team sent out offers to potential clients</task>
        <task lane="" pool="">marketing team informs management about the responses</task>
        <task lane="" pool="">Management sending out a detailed offer to the client</task>
        <task lane="" pool="">management start negotiation</task>
        <xor condition="|client accepts the offer|offer failed|" description="" type="">
            <seq>
                <task lane="" pool="">management prepare a contract</task>
            </seq>
            <seq>
                <task lane="" pool="">management analyzes the reason</task>
            </seq>
        </xor>
    </seq>
</rpst>